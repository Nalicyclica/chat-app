<div class="main-header">
  <div class="main-header-title">
    <%= @room.name %>
  </div>
  <div class="exit-room-btn">
    <%= link_to "チャットを終了する", "#" %>
  </div>
</div>

<div class="chat-messages">
  <ul class="post-messages">
    <%= render partial: "message", collection: @messages %>
  </ul>
</div>
<%= form_with model: [@room, @message], class: 'chat-form', local: true do |f| %>
  <div class="message-form">
   <%= f.text_field :content, class: 'message-form-text', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'message-form-submit' %>
<% end %>

