<div class="side-header">
    <div class="user-name">
      <%= link_to current_user.name, edit_user_path(current_user) %>
    </div>
    <div class="new-room-btn">
      <%= link_to "チャットを作成する", new_room_path %>
    </div>
</div>
<div class="side-rooms">
  <ul class="room-names">
    <% @rooms.each do |room| %>
    <li class="room-name">
      <%= link_to room.name, "#" %>
    </li>
    <% end %>
  </ul>
</div>